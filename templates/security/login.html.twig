{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="connect w40">
        <h1 class="h3 mb-3 font-weight-normal fs-1">Se connecter</h1>
        <label for="username fs" class="fs-5">Nom d'utilisateur</label>
        <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control my-2" autocomplete="username" required autofocus>
        <label for="password fs" class="fs-5">Mot de passe</label>
        <input type="password" name="_password" id="password" class="form-control my-2" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}

        <button class="btn btn-lg btn-secondary mt-4" type="submit">
            Se connecter
        </button>
        </div>
    </form>
{% endblock %}
