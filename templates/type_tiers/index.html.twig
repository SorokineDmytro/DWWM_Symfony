{% extends 'base.html.twig' %}

{% block title %}TypeTiers index{% endblock %}

{% block body %}
    <h1>TypeTiers</h1>

    <div class="line-button">
        <a class="btn btn-md btn-primary my-4" href="{{ path('app_type_tiers_new') }}">Nouveau type tiers</a>
        <a class="btn btn-md btn-success my-4" href="{{ path('app_typeTiers_import_excel') }}">Import Excel</a>
        <a class="btn btn-md btn-success my-4" href="{{ path('app_typeTiers_export_excel') }}">Export Excel</a>
        <a class="btn btn-md btn-primary my-4" href="javascript:window.print()">Imprimer</a>
    </div> 

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prefixe</th>
                <th>NumeroInitial</th>
                <th>Libelle</th>
                <th>Format</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_tier in type_tiers %}
            <tr>
                <td>{{ type_tier.id }}</td>
                <td>{{ type_tier.prefixe }}</td>
                <td>{{ type_tier.numeroInitial }}</td>
                <td>{{ type_tier.libelle }}</td>
                <td>{{ type_tier.format }}</td>
                <td class="d-flex justify-content-between">
                    <a class="btn btn-md btn-success" href="{{ path('app_type_tiers_show', {'id': type_tier.id}) }}">Afficher</a>
                    <a class="btn btn-md btn-primary" href="{{ path('app_type_tiers_edit', {'id': type_tier.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
