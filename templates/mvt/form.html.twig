{% extends "base.html.twig" %}

{% block body%}
    <div class="w80 m-auto">
        <h1 class="titre">{{title | upper}}</h1>
        {{form_start(form)}}
            {{form_row(form.numMouvement, {
                'label':'№ Mvt',
                'label_attr':{'class':'lab30'},
                'attr':{'class':'form-control w70 mt-2', 'placeholder':'Gérée automatiquement'},
                'required':false,
                'disabled':disabled,
            })}}
            {{form_row(form.dateMouvement, {
                'label':'Date Mvt',
                'label_attr':{'class':'lab30'},
                'attr':{'class':'form-control w70 mt-2'},
                'disabled':disabled,
            })}}
            {{form_row(form.typeMouvement, {
                'label':'Type Mvt',
                'label_attr':{'class':'lab30'},
                'attr':{'class':'form-seelect w70 mt-2'},
                'disabled':disabled,
            })}}
            {{form_row(form.tiers, {
                'label':'Tiers',
                'label_attr':{'class':'lab30'},
                'attr':{'class':'form-seelect w70 mt-2'},
                'disabled':disabled,
            })}}
            {{form_rest(form)}}
            <div class="line-button">
                <a href="{{path('app_mvt')}}" class="btn bnt-medium btn-primary">Retour à la liste</a>
                <button type="reset" class="btn bnt-medium btn-primary" {{disabled == true ? 'disabled' : ''}}>Annuler</button>
                <button type="submit" class="btn bnt-medium btn-primary" {{disabled == true ? 'disabled' : ''}}>Valider</button>
            </div>
        {{form_end(form)}}
    </div>

{% endblock %}